 <mapper namespace="cn.nchu.green_farm.mapper.FarmProductListMapper">

   <!--根据农产品id查询农产品列表数据-->
   <!--List<FarmProduct> findListById(Integer id)-->
	<select id="findListById" resultType="cn.nchu.green_farm.entity.FarmProduct">
        SELECT
            bid,
            item_type AS itemType,
            title,sell_point AS sellPoint,
            price,num,image,status,
            priority,
            created_user AS createdUser,
            created_time AS createdTime
        FROM
            t_farm_product
        ORDER BY
            priority desc
	</select>

